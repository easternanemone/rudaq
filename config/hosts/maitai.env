# Host-specific environment for maitai (100.117.5.12)
# Hardware machine with PVCAM camera, serial devices, and Comedi DAQ
#
# Usage:
#   source config/hosts/maitai.env
#   # or in scripts:
#   if [[ "$(hostname)" == "maitai" ]]; then source config/hosts/maitai.env; fi

# ==============================================================================
# PVCAM Camera SDK
# ==============================================================================

# SDK installation root
export PVCAM_ROOT="/opt/pvcam"
export PVCAM_SDK_DIR="/opt/pvcam/sdk"
export PVCAM_LIB_DIR="/opt/pvcam/library/x86_64"
export PVCAM_UMD_PATH="/opt/pvcam/drivers/user-mode"

# CRITICAL: Version must match installed SDK (check /opt/pvcam/pvcam.ini)
export PVCAM_VERSION="7.1.1.118"

# Library paths
export LIBRARY_PATH="/opt/pvcam/library/x86_64:${LIBRARY_PATH:-}"
export LD_LIBRARY_PATH="/opt/pvcam/library/x86_64:/opt/pvcam/drivers/user-mode:${LD_LIBRARY_PATH:-}"

# ==============================================================================
# Serial Device Ports
# ==============================================================================

# Newport 1830-C Power Meter (RS-232)
export NEWPORT_1830C_PORT="/dev/ttyS0"

# MaiTai Laser (USB-Serial)
export MAITAI_LASER_PORT="/dev/ttyUSB5"

# ELL14 Thorlabs Rotators (RS-485 bus, addresses 2, 3, 8)
export ELLIPTEC_PORT="/dev/ttyUSB1"

# ESP300 Newport Motion Controller (USB-Serial)
export ESP300_PORT="/dev/ttyUSB0"

# ==============================================================================
# Hardware Test Configuration
# ==============================================================================

# Enable hardware smoke tests
export PVCAM_SMOKE_TEST="1"
export PVCAM_CAMERA_NAME="PrimeBSI"

# ==============================================================================
# Server Configuration
# ==============================================================================

# Default daemon bind address (all interfaces for remote GUI)
export DAQ_DAEMON_BIND="0.0.0.0:50051"

# Rerun visualization (bind to all interfaces)
export RERUN_BIND="0.0.0.0"
export RERUN_PORT="9876"
